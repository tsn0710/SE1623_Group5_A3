@inject IHttpContextAccessor HttpContextAccessor;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Estore2Client</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Estore2Client.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <style>
        a.nav1 {
            border-radius: 16px;
        }
        a.nav1:hover {
            background-color: orange;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" style="padding-top: 13px;font-size:20px;color:black;font-family:Lobster" asp-area="" asp-controller="Home" asp-action="Index">EStore</a>

                @{
                    string email = HttpContextAccessor.HttpContext.Session.GetString("Email") ?? "";
                }

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" style=" text-align:center;min-width:95%">

                        <li class="nav-item" style="background-color:#FFFFFF;min-width:16%;border:3px solid #E24F00;border-radius:20px;margin-right:4px;margin-left:4px">
                            <a class="nav-link text-dark nav1" href="/Order">Order</a>
                        </li>
                        <li class="nav-item" style="background-color:#FFFFFF;min-width:16%;border:3px solid #E24F00;border-radius:20px;margin-right:4px;margin-left:4px">
                            <a class="nav-link text-dark nav1" href="/Products">Product</a>
                        </li>

                        <li class="nav-item" style="min-width:16%;background-color:#FFFFFF;min-width:16%;border:3px solid #3C3C3C;border-radius:20px;margin-right:4px;margin-left:4px">
                            <a class="nav-link text-dark nav1" href="/Members">Member</a>
                        </li>
                        <li class="nav-item" style="min-width:16%;background-color:#FFFFFF;min-width:16%;border:3px solid #3C3C3C;border-radius:20px;margin-right:4px;margin-left:4px">
                            <a class="nav-link text-dark nav1" href="/UserProfile/EditProfile">Profile</a>
                        </li>
                        <li class="nav-item" style="min-width:16%;background-color:#FFFFFF;min-width:16%;border:3px solid #3C3C3C;border-radius:20px;margin-right:4px;margin-left:4px">
                            <a class="nav-link text-dark nav1" href="/Report/Sale">Report Sale</a>
                        </li>
                        @if (email.Length == 0)
                        {
                            <li class="nav-item" style="min-width:16%;background-color:#FFFFFF;min-width:16%;border:3px solid #3C3C3C;border-radius:20px;margin-right:4px;margin-left:4px">
                                <a class="nav-link text-dark text-decoration-none nav1" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item" style="min-width:16%;background-color:#FFFFFF;min-width:16%;border:3px solid #3C3C3C;border-radius:20px;margin-right:4px;margin-left:4px">
                                <a class="nav-link text-dark  text-decoration-none nav1" asp-area="" asp-controller="Home" asp-action="Logout">Log out (@email)</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Estore2Client - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
